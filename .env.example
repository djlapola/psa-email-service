# Email Service Configuration
PORT=4001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/email_service?schema=public"

# Resend Configuration
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourpsa.com

# API Security
EMAIL_SERVICE_API_KEY=your-generated-api-key-here

# Resend Webhook (for delivery status updates: email.delivered, email.bounced, etc.)
RESEND_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# Resend Webhook (for inbound email: email.received)
RESEND_INBOUND_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# Outbound Webhooks (notify other services of email events)
CONTROL_PLANE_WEBHOOK_URL=http://cp-backend:4000/api/webhooks/email
PSA_WEBHOOK_URL=http://192.168.86.61:3000/api/webhooks/email

# Cloudflare DNS (for automated domain provisioning)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
BASE_DOMAIN=skyrack.com

# PSA Internal API (for inbound email ticket routing)
PSA_INTERNAL_API_URL=http://192.168.86.61:3000/api/internal/v1
PSA_INTERNAL_API_KEY=your-psa-internal-api-key
